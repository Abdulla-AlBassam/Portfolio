---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="In Progress — Abdulla AlBassam">
  <div class="page">
    <div class="content">
      <h1>IN PROGRESS</h1>
      <p>This project is still being worked on. Check back soon.</p>
      <a href="/projects" class="back-link">← Back to Projects</a>
    </div>
  </div>
</BaseLayout>

<style>
  .page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .content {
    text-align: center;
  }

  h1 {
    font-family: "Space Grotesk", sans-serif;
    font-size: clamp(2rem, 6vw, 4rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    color: white;
    margin: 0 0 1rem 0;
  }

  p {
    color: #888;
    font-size: 1rem;
    margin: 0 0 2rem 0;
  }

  .back-link {
    color: #555;
    font-size: 0.85rem;
    text-decoration: none;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: white;
  }
</style>
