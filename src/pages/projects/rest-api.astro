import BaseLayout from "@/layouts/BaseLayout.astro";
import fs from "node:fs";
import path from "node:path";

function scanProjectDir(dirName: string) {
  const dirPath = path.join(process.cwd(), "public", "projects", dirName);

  let files: string[] = [];
  try {
    files = fs.readdirSync(dirPath);
  } catch {
    files = [];
  }

  const images = files
    .filter((f) => /\.(png|jpg|jpeg|gif|webp)$/i.test(f))
    .sort();
  const code = files.filter((f) => /\.(php)$/i.test(f)).sort();
  const databases = files
    .filter((f) => /\.(sqlite|sqlite3|db)$/i.test(f))
    .sort();

  return {
    images: images.map((f) => `/projects/${dirName}/${f}`),
    code: code.map((f) => ({
      name: f,
      path: `/projects/${dirName}/${f}`,
    })),
    databases: databases.map((f) => ({
      name: f,
      path: `/projects/${dirName}/${f}`,
    })),
  };
}

const restApi = scanProjectDir("rest-api");
const blueprint = scanProjectDir("architecture-blueprint");
---

<BaseLayout title="REST API + Architecture Blueprint â€” Abdulla AlBassam">
  <div class="page">
    <a href="/projects" class="back-link">&larr; Back to Projects</a>

    <div class="page-header">
      <h1>REST API Build + Architecture Blueprint</h1>
      <p class="page-desc">
        Object-oriented PHP REST API with SQLite backend, and a future-proof
        architecture specification for multi-conference scaling.
      </p>
    </div>

    <section class="project-section">
      <h2>REST API</h2>

      {restApi.images.length > 0 && (
        <div class="section-group">
          <h3>Screenshots</h3>
          <div class="image-gallery">
            {restApi.images.map((src) => (
              <a href={src} target="_blank" rel="noopener noreferrer" class="gallery-item">
                <img src={src} alt="" loading="lazy" />
              </a>
            ))}
          </div>
        </div>
      )}

      {restApi.code.length > 0 && (
        <div class="section-group">
          <h3>Source Files</h3>
          <div class="file-list">
            {restApi.code.map((file) => (
              <a href={file.path} target="_blank" rel="noopener noreferrer" class="file-item">
                <span class="file-ext">.php</span>
                <span class="file-name">{file.name}</span>
              </a>
            ))}
          </div>
        </div>
      )}

      {restApi.databases.length > 0 && (
        <div class="section-group">
          <h3>Database Files</h3>
          <div class="file-list">
            {restApi.databases.map((file) => (
              <a href={file.path} target="_blank" rel="noopener noreferrer" class="file-item">
                <span class="file-ext">.db</span>
                <span class="file-name">{file.name}</span>
              </a>
            ))}
          </div>
        </div>
      )}

      {restApi.images.length === 0 && restApi.code.length === 0 && restApi.databases.length === 0 && (
        <p class="empty-state">No files yet.</p>
      )}
    </section>

    <section class="project-section">
      <h2>Architecture Blueprint</h2>

      {blueprint.images.length > 0 && (
        <div class="section-group">
          <h3>Diagrams</h3>
          <div class="image-gallery">
            {blueprint.images.map((src) => (
              <a href={src} target="_blank" rel="noopener noreferrer" class="gallery-item">
                <img src={src} alt="" loading="lazy" />
              </a>
            ))}
          </div>
        </div>
      )}

      {blueprint.code.length > 0 && (
        <div class="section-group">
          <h3>Source Files</h3>
          <div class="file-list">
            {blueprint.code.map((file) => (
              <a href={file.path} target="_blank" rel="noopener noreferrer" class="file-item">
                <span class="file-ext">.php</span>
                <span class="file-name">{file.name}</span>
              </a>
            ))}
          </div>
        </div>
      )}

      {blueprint.databases.length > 0 && (
        <div class="section-group">
          <h3>Database Files</h3>
          <div class="file-list">
            {blueprint.databases.map((file) => (
              <a href={file.path} target="_blank" rel="noopener noreferrer" class="file-item">
                <span class="file-ext">.db</span>
                <span class="file-name">{file.name}</span>
              </a>
            ))}
          </div>
        </div>
      )}

      {blueprint.images.length === 0 && blueprint.code.length === 0 && blueprint.databases.length === 0 && (
        <p class="empty-state">No files yet.</p>
      )}
    </section>
  </div>
</BaseLayout>

